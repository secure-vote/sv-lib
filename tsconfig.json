{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declarationDir": "dist",
        "outDir": "dist",
        "typeRoots": [
          "node_modules/@types"
        ],
        "moduleResolution": "node",
        "target": "es5",
        "removeComments": false,
        "module": "es2015",
        "strict": false, /* maybe change this back one day */
        "sourceMap": true,
        "declaration": true,
        "lib": ["es2015", "es2016", "es2017", "dom"],
    },
    "include": [
        "src"
    ]
}
