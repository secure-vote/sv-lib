{
  "name": "sv-lib",
  "version": "0.1.22",
  "description": "SecureVote Light supporting functionality",
  "main": "lib/index.js",
  "module-commented-out": "lib/index.es5.js",
  "types": "lib/index.d.ts",
  "homepage": "https://github.com/secure-vote/sv-lib#readme",
  "files": [
    "./lib"
  ],
  "author": {
    "name": "Max Kaye",
    "email": "max@secure.vote"
  },
  "bugs": {
    "url": "https://github.com/secure-vote/sv-lib/issues"
  },
  "dependencies": {
    "@types/bn.js": "^4.11.1",
    "@types/bs58": "^3.0.30",
    "@types/ramda": "^0.25.35",
    "assert": "^1.4.1",
    "axios": "^0.18.0",
    "bs58": "^4.0.1",
    "buffer": "^5.1.0",
    "colors": "^1.3.0",
    "esdoc-typescript-plugin": "^1.0.1",
    "eth-ens-namehash": "^2.0.8",
    "eth-lib": "^0.2.8",
    "ethereumjs-util": "^5.2.0",
    "io-ts": "^1.2.1",
    "ramda": "^0.25.0",
    "sha256": "^0.2.0",
    "stellar-base": "^0.8.0",
    "web3": "^1.0.0-beta.34",
    "web3-eth-abi": "^1.0.0-beta.34",
    "web3-eth-accounts": "^1.0.0-beta.34",
    "web3-providers-ws": "^1.0.0-beta.34",
    "web3-utils": "^1.0.0-beta.34"
  },
  "deprecated": false,
  "keywords": [
    "SecureVote",
    "voting",
    "crypto",
    "blockchain"
  ],
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/secure-vote/sv-lib.git"
  },
  "devDependencies": {
    "@types/jest": "^23.3.0",
    "@types/node": "^10.5.2",
    "buffer": "^5.1.0",
    "commitizen": "^2.9.6",
    "coveralls": "^3.0.0",
    "cross-env": "^5.0.1",
    "cz-conventional-changelog": "^2.0.0",
    "esdoc": "^1.1.0",
    "esdoc-ecmascript-proposal-plugin": "^1.0.0",
    "esdoc-standard-plugin": "^1.0.0",
    "husky": "^0.14.0",
    "jest": "^23.4.1",
    "lint-staged": "^7.1.3",
    "lodash.camelcase": "^4.3.0",
    "minami": "^1.2.3",
    "prettier": "^1.13.4",
    "prompt": "^1.0.0",
    "replace-in-file": "^3.0.0-beta.2",
    "rimraf": "^2.6.1",
    "rollup": "^0.58.0",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-json": "^3.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.2.1",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.15.1",
    "semantic-release": "^15.0.0",
    "ts-jest": "^23.0.1",
    "ts-node": "^6.0.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.1.0",
    "tslint-config-standard": "^7.0.0",
    "typedoc": "^0.11.0",
    "typescript": "^3.0.0-rc",
    "validate-commit-msg": "^2.12.2"
  },
  "scripts": {
    "dev": "tsc -w",
    "docs": "esdoc",
    "prepublish": "true # yarn build",
    "lint": "tslint -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "prebuild": "rimraf dist",
    "build": "tsc --module commonjs && cp -a ./src/smart_contracts ./lib/smart_contracts && yarn build:rollup && esdoc # typedoc --out docs --target es6 --theme minimal --mode file src",
    "build:rollup": "rollup -c rollup.config.ts",
    "start": "rollup -c rollup.config.ts -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:prod": "npm run lint && npm run test -- --coverage --no-cache",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "echo 'commit' || git-cz",
    "semantic-release": "semantic-release",
    "semantic-release-prepare": "ts-node tools/semantic-release-prepare",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "coverageThreshold-commented": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverage": false,
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "tabWidth": 4,
    "printWidth": 140
  }
}
